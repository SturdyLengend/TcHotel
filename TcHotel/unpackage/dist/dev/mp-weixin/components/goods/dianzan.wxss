.goods_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 10rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  overflow: hidden;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.goods_list .goods_item {
  position: relative;
  width: 355rpx;
  margin-bottom: 20rpx;
  background: #fff;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.goods_list .goods_item .tianchong {
  background: #eee;
}
.goods_list .goods_item .tianchong image {
  -webkit-border-top-left-radius: 5px;
          border-top-left-radius: 5px;
  -webkit-border-top-right-radius: 5px;
          border-top-right-radius: 5px;
  width: 100%;
  height: 360rpx;
  mix-width: 330rpx;
  margin: 0 0;
}
.goods_list .goods_item .xuanfu {
  overflow: hidden;
  position: absolute;
  left: 20rpx;
  top: 300rpx;
  width: 260rpx;
  height: 40rpx;
  font-size: 10px;
  background-color: rgba(118, 115, 114, 0.7);
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  text-align: center;
}
.goods_list .goods_item .xuanfu text {
  line-height: 40rpx;
  color: white;
}
.goods_list .goods_item .price {
  width: 320rpx;
  height: 50rpx;
  font-size: 12px;
  color: #4a4a4a;
  padding: 16rpx 0;
}
.goods_list .goods_item .price .tex {
  display: inline-block;
  width: 300rpx;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods_list .goods_item .bao {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 50rpx;
  position: relative;
}
.goods_list .goods_item .bao .tupian image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0px;
  line-height: 40rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.goods_list .goods_item .bao .info text {
  height: 40rpx;
  color: #c1c1c1;
  font-size: 8px;
  position: absolute;
  left: 50rpx;
  top: -4rpx;
  line-height: 40rpx;
}
.goods_list .goods_item .bao .item {
  height: 40rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: inline-block;
  text-align: right;
  line-height: 40rpx;
}
.goods_list .goods_item .bao .active {
  color: red;
}

