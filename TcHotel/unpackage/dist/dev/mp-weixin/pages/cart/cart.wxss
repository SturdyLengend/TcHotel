
.top-nav {
	width: 750rpx;
	position: fixed;
}
.top-nav-bar {
	border: 2px solid white;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 44px;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 13px;
	background-color: #fff;
	overflow: scroll;
	color: #353b48;
	border-top: 0px solid #e5e5e5;
}
.nav-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.item {
	width: 70px;
	text-align: center;
	line-height: 33px;
	height: 33px;
}
.active {
	color: #ff0000;
	font-weight: 550;
	position: relative;
}
.active::after {
	content: '';
	position: absolute;
	top: 25px;
	width: 90rpx;
	height: 8rpx;
	background-color: red;
	left: 0px;
	right: 0px;
	bottom: 0px;
	margin: auto;
}
image {
	width: 750rpx;
	height: 120rpx;
}

